{% extends 'base.html.twig' %}

{% block title %}
  Library!
{% endblock %}

{% block stylesheets %}
  {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block body %}
  <div class="return-container">
    <a href="/admin/category" class="mdc-button mdc-button--raised">
      <span class="mdc-button__label">Return</span>
    </a>
  </div>
  <h1>
    Add Category
  </h1>
  <p>
    Categories u can choose from when adding new books
  </p>
  <form method="post" class="form-grid">
    <div class="inputs">
      <label class="mdc-text-field mdc-text-field--outlined full">
        <span class="mdc-notched-outline">
          <span class="mdc-notched-outline__leading"></span>
          <span class="mdc-notched-outline__notch">
            <span class="mdc-floating-label" id="my-label-id">Title</span>
          </span>
          <span class="mdc-notched-outline__trailing"></span>
        </span>
        <input name="title"
          type="text"
          class="mdc-text-field__input"
          aria-labelledby="my-label-id" />
      </label>
    </div>
    <button class="mdc-button mdc-button--raised submit-button">
      <span class="mdc-button__label">Add Category</span>
    </button>
  </form>
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('admin') }}
{% endblock %}
